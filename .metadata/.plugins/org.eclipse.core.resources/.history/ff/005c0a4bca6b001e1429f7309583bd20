
CREATE SEQUENCE SEQ_PRODUCT;


CREATE TABLE TBL_PRODUCT(
      
   PRODUCT_ID NUMBER CONSTRAINT PK_PRODUCT PRIMARY KEY,
   PRODUCT_NAME VARCHAR2(500) NOT NULL,
   PRODUCT_STOCK NUMBER DEFAULT 0,
   PRODUCT_PRICE NUMBER DEFAULT 0

);
ALTER TABLE TBL_PRODUCT ADD(REGISTER_DATE DATE);
ALTER TABLE TBL_PRODUCT ADD(UPDATE_DATE DATE);


ALTER TABLE TBL_PRODUCT  MODIFY(REGISTER_DATE DEFAULT SYSDATE);
ALTER TABLE TBL_PRODUCT  MODIFY(UPDATE_DATE DEFAULT SYSDATE);
SELECT * FROM TBL_PRODUCT;